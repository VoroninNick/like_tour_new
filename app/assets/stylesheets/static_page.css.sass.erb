ul.publications-pagers-preview
    margin-left: 0
    border-top: 1px solid #BCBEC0
    border-right: 1px solid #BCBEC0
    border-bottom: 1px solid #BCBEC0
    li
        list-style: none
        position: relative
        a
            font:
                family: 'Fira Sans', sans-serif
                size: 1.125rem
                weight: 400
            color: #2A3A4B
            line-height: 1.3125rem
            text:
                transform: uppercase
            padding: 20px
            display: block
            height: 79.5px
            background-color: #d1d3d4 // Old browsers
            @include filter-gradient(#ffffff, #d1d3d4, vertical) // IE6-9
            @include background-image(linear-gradient(top,  #ffffff 0%, #d1d3d4 100%))
            position: relative
            span
                display: block
                +my_vertical_align
            &.active
                background-color: #2A3A4B // Old browsers
                @include filter-gradient(#0B1B2A, #2A3A4B, vertical) // IE6-9
                @include background-image(linear-gradient(top,  #0B1B2A 0%,#2A3A4B 100%))
                color: #fff
                &:before
                    display: block
                    content: ''
                    +triangle(left, 10px, #0B1B2A)
                    position: absolute
                    top: 10px
                    left: -20px
                &:after
                    display: block
                    content: ''
                    width: 10px
                    height: 80px
                    // needs latest Compass, add '@import "compass"' to your scss
                    background-color: #9c2242 // Old browsers
                    @include filter-gradient(#ed1555, #9c2242, horizontal) // IE6-9
                    @include background-image(linear-gradient(left,  #ed1555 0%,#9c2242 100%))
                    position: absolute
                    right: 0
                    top: 0

